<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical"
    tools:context=".LinearLayoutActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="@string/linearlayout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/flag_of_austria"
            android:layout_width="204dp"
            android:layout_height="120dp"
            android:paddingHorizontal="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/flag_of_austria" />

        <ImageView
            android:id="@+id/flag_of_colombia"
            android:layout_width="204dp"
            android:layout_height="120dp"
            android:paddingHorizontal="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/flag_of_colombia" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/flag_of_denmark"
            android:layout_width="204dp"
            android:layout_height="120dp"
            android:paddingHorizontal="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/flag_of_denmark" />

        <ImageView
            android:id="@+id/flag_of_italy"
            android:layout_width="204dp"
            android:layout_height="120dp"
            android:paddingHorizontal="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/flag_of_italy" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/flag_of_madagascar"
            android:layout_width="204dp"
            android:layout_height="120dp"
            android:paddingHorizontal="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/flag_of_madagascar" />

        <ImageView
            android:id="@+id/flag_of_poland"
            android:layout_width="204dp"
            android:layout_height="120dp"
            android:paddingHorizontal="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/flag_of_poland" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/flag_of_switzerland"
            android:layout_width="204dp"
            android:layout_height="120dp"
            android:src="@drawable/flag_of_switzerland" />

        <ImageView
            android:id="@+id/flag_of_thailand"
            android:layout_width="204dp"
            android:layout_height="120dp"
            android:paddingHorizontal="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/flag_of_thailand" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/endButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/end_button" />

        <Button
            android:id="@+id/gridLayoutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_layout" />

    </LinearLayout>

</LinearLayout>